{
	"manifest_version" : 2,
	"name": "utils tests",
	"description": "Chrome Extension common utilities tests",
	"version": "0.1",
	"icons": { 
		"16": "logo.png",
		"48": "logo.png",
		"128": "logo.png"
	},
	"permissions": [
		"contextMenus",
		"tabs",
		"notifications",
		"http://*/*",
		"https://*/*",
		"clipboardWrite",
		"clipboardRead"
	],
	"app": {
		"launch": {
			"local_path": "main.html"
		}
	},
	"background": {
		"scripts": [
			"utils-1.2.js",
			"background.js"
		]
	},
	// enable offline
	"minimum_chrome_version": "18"
}